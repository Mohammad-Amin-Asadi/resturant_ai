# ============================================
# Avatabot Docker Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# ============================================
# Database Configuration
# ============================================
POSTGRES_DB=server_db
POSTGRES_USER=avatabot_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5433

# ============================================
# Django Backend Configuration
# ============================================
# Security - REQUIRED
SECRET_KEY=your-django-secret-key-here
# Generate with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'

DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com
BACKEND_PORT=8001

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
CSRF_TRUSTED_ORIGINS=https://yourdomain.com

# ============================================
# AI Engine Configuration
# ============================================
# Backend URL (use service name in docker-compose)
BACKEND_SERVER_URL=http://backend:8000
ENVIRONMENT=production

# OpenAI API - REQUIRED
OPENAI_API_KEY=sk-your-openai-api-key-here

# Soniox STT (optional)
SONIOX_API_KEY=your-soniox-api-key-here

# ============================================
# SMS Configuration (Optional - can be in tenant config)
# ============================================
SMS_API_URL=https://api.limosms.com/api/sendsms
SMS_API_KEY=your-limosms-api-key
SMS_SENDER_NUMBER=your-sender-number

# ============================================
# Weather API (Optional - can be in tenant config)
# ============================================
WEATHER_API_URL=https://one-api.ir/weather/
WEATHER_API_TOKEN=your-weather-api-token

# ============================================
# OpenSIPS Configuration (if using external OpenSIPS)
# ============================================
OPENSIPS_MI_SOCKET=
OPENSIPS_EVENT_SOCKET=

# ============================================
# RTP Configuration
# ============================================
RTP_PUBLIC_IP=your-public-ip
RTP_BIND_IP=0.0.0.0

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO

# ============================================
# Timezone
# ============================================
TZ=Asia/Tehran

# ============================================
# Optional: Engine Config File
# ============================================
# CONFIG_FILE=/app/config.ini
